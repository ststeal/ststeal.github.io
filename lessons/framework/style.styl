$primary = #FFC547
$secondary = black


font()
    font-size 18px
    font-weight bold
    color lighten($secondary, 90%)


body
    margin 0
    font-family 'Raleway', "Product Sans", "Open Sans", Roboto, Arial, Helvetica, sans-serif


.framework
    display flex
    flex-wrap wrap
    justify-content space-around
    width 90%
    margin auto


.button
    display block
    margin 10px
    height 40px
    width 80px
    border-radius 5px
    border solid 2px $secondary
    background-color darken($primary, 50%)
    font()

    &:active
        background-color invert(darken($primary, 50%))
        color invert(lighten($secondary, 90%))
        border-color  invert($secondary)



.input
    display block
    width 100%
    height 30px
    margin 10px
    padding 5px
    border-radius 5px
    border solid 2px $secondary
    background-color darken($primary, 10%)
    font()


.container
    position relative
    margin 10px


.checkbox
    position absolute
    top 0
    left 0
    margin 0
    opacity 0


.bg
    position absolute
    width 80px
    height 40px
    background-color #F8F8F8
    border-radius 20px
    transition 0.25s ease-in-out
    transition-property background-color, border-color
    border 2px solid #DDDDDD
    box-sizing border-box


.control
    position absolute
    width 40px
    height 40px
    background-color #FFFFFF
    border-radius 50%
    transition 0.25s ease-in-out
    transition-property transform, border-color
    border 2px solid #DDDDDD
    box-sizing border-box


.checkbox:checked
    & ~ .bg
        background-color darken($primary, 10%)
        border-color lighten($secondary, 50%)

    & ~ .control
        transform translateX(100%)
        border-color lighten($secondary, 50%)


input
    &::-webkit-input-placeholder {
    color lighten($secondary, 30%)
    font-size 16px
    }

