styleColor = red

font()
  font-size 18px
  font-weight bold
  color lightness(styleColor, 90%)

body
  margin 0
  font-family 'Raleway', "Product Sans", "Open Sans", Roboto, Arial, Helvetica, sans-serif


.framework
  display flex
  flex-wrap wrap
  justify-content space-around
  width 90%
  margin auto

.button
  display block
  margin 10px
  height 40px
  width 80px
  border none
  border-radius 5px
  background-color saturation(styleColor, 50%)
  font()
  &:focus
    outline: none;
  &:active
    background-color hue(styleColor, 50%)
    color saturation(styleColor, 50%)



.input
  display block
  width 100%
  height 30px
  margin 10px
  border-radius 5px
  background-color saturation(styleColor, 10%)
  font()
  &:focus
    outline: none;

.container
  position relative
  margin 10px


.checkbox
  position absolute
  top 0
  left 0
  margin 0
  opacity 0


.bg
  position absolute
  width 80px
  height 40px
  background-color #F8F8F8
  border-radius 20px
  transition 0.25s ease-in-out
  transition-property background-color, border-color
  border 2px solid #DDDDDD
  box-sizing border-box


.control
  position absolute
  width 40px
  height 40px
  background-color #FFFFFF
  border-radius 50%
  transition 0.25s ease-in-out
  transition-property transform, border-color
  border 2px solid #DDDDDD
  box-sizing border-box


.checkbox:checked
  &~ .bg
    background-color hue(styleColor, 10%)
    border-color hue(styleColor, 30%)
  &~ .control
    transform translateX(100%)
    border-color hue(styleColor, 30%)

